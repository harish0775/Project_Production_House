<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="feed-posts">
            <h4>Posts</h4>
            <% if(locals.user){ %>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Type Here..." style="border:none ;border-radius:5px;"required></textarea>
                <input type="submit" value="Post" style="height: 35px;width: 80px; background-color: #4885ed;border:none ;border-radius:3px;">
                 
            </form>
            <% } %>
         
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                        
                    <%- include('_post') -%>
                        
                    <%} %>
                </ul>
            </div>
        </section>
        
        
        <section id="user-friends">
            <h2>Friends</h2>
            <% for(u of all_users){%>
                <p>
                    <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                </p>
            <% } %>
        </section>
</div>
<script src="/js/home_posts.js"></script>
